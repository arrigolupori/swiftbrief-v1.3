generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CS_SUPPORT
  SUPER_ADMIN
  ADMIN
  EDITOR
  WRITER
  VIEWER
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Organization {
  id                String    @id @default(cuid())
  name              String?
  periodEnd         DateTime?
  plan              String    @default("Free")
  briefAllowance    Int       @default(2)
  monthlyBriefsUsed Int       @default(0)
  topicAllowance    Int       @default(1)
  monthlyTopicsUsed Int       @default(0)
  brandAllowance    Int       @default(1)
  customerId        String?   @unique
  users             User[]
}

model User {
  id             String        @id @default(cuid())
  name           String?
  email          String?       @unique
  emailVerified  DateTime?
  organizationId String?
  guidedBrands   Boolean       @default(true)
  role           Role          @default(SUPER_ADMIN)
  sessions       Session[]
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

model Brand {
  id String @id @default(cuid())
}

model Topic {
  id String @id @default(cuid())
}

model SubTopic {
  id String @id @default(cuid())
}

model Brief {
  id String @id @default(cuid())
}

model Link {
  id String @id @default(cuid())
}
